    <script>
        const sendBtn = document.getElementById("sendBtn");
        const messageInput = document.getElementById("messageInput");

        // Chat container (inside your chat box)
        const chatBox = document.querySelector(".flex.flex-col");

        // Replace with real logged-in user info
        const currentUser = "Archit";
        const chatPartner = "Ravi";

        // Send message to DB
        async function sendMessage(to, text) {
            await fetch("/user/index", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ to, text })
            });
        }

        // Fetch all messages between two users
        async function fetchMessages() {
            const res = await fetch(`/chat/${currentUser}/${chatPartner}`);
            const data = await res.json();

            chatBox.innerHTML = ""; // clear old messages

            data.forEach(msg => {
                const div = document.createElement("div");
                div.classList.add("p-2", "my-1", "rounded-lg", "w-fit");

                if (msg.from === currentUser) {
                    // Sent message style
                    div.classList.add("bg-blue-600", "text-white", "self-end");
                    div.textContent = `You: ${msg.text}`;
                } else {
                    // Received message style
                    div.classList.add("bg-gray-300", "text-black");
                    div.textContent = `${msg.from}: ${msg.text}`;
                }

                chatBox.appendChild(div);
            });

            // Scroll to bottom after update
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        // Send Button Event
        sendBtn.addEventListener("click", async () => {
            const text = messageInput.value.trim();
            if (text) {
                await sendMessage(chatPartner, text);
                messageInput.value = "";
                await fetchMessages(); // refresh immediately
            }
        });

        // Poll every 1 second
        setInterval(fetchMessages, 1500);

        // Load messages at start
        fetchMessages();
    </script>

